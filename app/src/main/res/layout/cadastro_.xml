<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F0590"
    android:theme="@style/Theme.Canguinha">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cadastro_tela" />

    <Button
        android:id="@+id/userCadastrado"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="565dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/botao"
        android:onClick="Entrar"
        android:text="JÃ¡ tenho uma conta"
        android:textColor="#F1F1F1"
        app:layout_constraintBottom_toTopOf="@+id/btnCadastrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/botao"
        android:onClick="Cadastrar"
        android:text="Cadastre-se"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCadastrado" />


</androidx.constraintlayout.widget.ConstraintLayout>
