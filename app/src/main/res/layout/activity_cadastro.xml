<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Cadastro"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="350dp"
        android:background="@drawable/container_background"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="242dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/subcontainer_background"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/nameUser"
                android:layout_width="338dp"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/icon_person"
                android:ems="10"
                android:inputType="text|textPersonName"
                android:text="Nome"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="183dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/subcontainer_background"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/emailUser"
                android:layout_width="343dp"
                android:layout_height="46dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:ems="10"
                android:inputType="text|textEmailAddress"
                android:text="Email"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="245dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/subcontainer_background"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/passwordUserLogin"
                android:layout_width="344dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/icon_cadeado"
                android:ems="10"
                android:inputType="text|textPassword"
                android:text="Senha"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="301dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="216dp"
            android:layout_height="65dp"
            android:layout_marginStart="80dp"
            android:backgroundTint="#590D59"
            android:text="Cadastrar"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:text="Termos de uso"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="503dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="326dp"
        android:layout_height="76dp"
        android:text="Crie sua conta"
        android:textColor="#FFFF00"
        android:textSize="50sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="87dp" />

</androidx.constraintlayout.widget.ConstraintLayout>